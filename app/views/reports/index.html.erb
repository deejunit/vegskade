<h1>Alle rapporter</h1>

<table>
  <tr>
    <th>Tittel</th>
    <th>Beskrivelse</th>
    <th>E-postadresse</th>
    <th>Behandlet</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.title %></td>
    <td><%= report.description %></td>
    <td><%= report.email %></td>
    <td><%= report.resolved %></td>
    <td><%= link_to 'Toggle status', toggle_report_path(report), method: :put %></td>
    <td><%= link_to 'Vis', report %></td>
    <td><%= link_to 'Endre', edit_report_path(report) %></td>
    <td><%= link_to 'Slett', report, confirm: 'Er du sikker?', method: :delete %></td>
  </tr>
<% end %>
</table>

